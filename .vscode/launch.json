// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Mealvault API (Docker)",
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "remoteRoot": "/usr/src/app/",
      "localRoot": "${workspaceFolder}/api"
    }
  ]
}